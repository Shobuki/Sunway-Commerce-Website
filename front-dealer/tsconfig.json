{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Enable this if you want to emit compiled JavaScript
    "esModuleInterop": true,
    "module": "commonjs", // Use CommonJS for compatibility with Node.js
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../back/prisma/seed.ts",
    "../back/src/routes/dealer-api/categories.ts",
    "../back/src/routes/dealer-api/events.ts",
    "../back/src/routes/dealer-api/products.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
